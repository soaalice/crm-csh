@{
    ViewData["Title"] = "Edit Alert Rate";
}

<h2>@ViewData["Title"]</h2>

@if (ViewData["Message"] != null)
{
    <div class="alert alert-success">
        @ViewData["Message"]
    </div>
}

@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger">
        @ViewData["Error"]
    </div>
}

<form method="post" asp-action="UpdateAlertRate">
    <div class="form-group">
        <label for="paramValue">Alert Rate</label>
        <input type="number" min="0" max="100" class="form-control" id="paramValue" name="paramValue" required />
    </div>
    <button type="submit" class="btn btn-primary">Update Alert Rate</button>
</form>
