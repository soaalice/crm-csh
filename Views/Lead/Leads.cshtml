@model IEnumerable<crm_csh.Models.Lead>

<h1>Lead List</h1>
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success">
        @ViewBag.SuccessMessage
    </div>
}

<table class="table table-responsive">
    <thead>
        <tr>
            <th>Name</th>
            <th>Status</th>
            <th>Customer</th>
            <th>Expense Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lead in Model)
        {
            <tr>
                <td>@lead.Name</td>
                <td>@lead.Status</td>
                <td>@lead.Customer?.Name</td>
                @* <td>@lead.ExpenseAmount?.ToString("C")</td> *@
                <td>
                    <form method="post" action="@Url.Action("UpdateLead", "Lead")" id="updateLead">
                        <input type="hidden" name="id" value="@lead.LeadId" />
                        <input type="number" min="0" name="expense" value="@lead.ExpenseAmount" step="0.01" required placeholder="Enter an amount..."/>
                        <button type="submit" class="btn btn-primary" id="submitBtn">
                            <span id="spinner" style="display:none;" class="spinner"></span> Update
                        </button>
                    </form>
                </td>
                <td>    
                    <form method="post" action="@Url.Action("DeleteLead", "Lead")" style="display:inline;">
                        <input type="hidden" name="id" value="@lead.LeadId" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this lead?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    document.getElementById("updateLead").onsubmit = function () {
        showLoadingState('submitBtn', 'spinner');
    };
</script>
