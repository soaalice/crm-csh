@model IEnumerable<crm_csh.Models.Ticket>

<h1>Ticket List</h1>
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Subject</th>
            <th>Description</th>
            <th>Status</th>
            <th>Priority</th>
            <th>Manager</th>
            <th>Employee</th>
            <th>Customer</th>
            <th>Created At</th>
            <th>Expense Amount</th>
            <th>Update Expense</th> <!-- New column for updating expense -->
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.Subject</td>
                <td>@ticket.Description</td>
                <td>@ticket.Status</td>
                <td>@ticket.Priority</td>
                <td>@ticket.Manager?.Username</td>
                <td>@ticket.Employee?.Username</td>
                <td>@ticket.Customer?.Name</td>
                <td>@ticket.CreatedAt.ToString("g")</td>
                <td>@ticket.ExpenseAmount?.ToString("C")</td>
                <td>
                    <form method="post" action="@Url.Action("UpdateTicket", "Ticket")">
                        <input type="hidden" name="id" value="@ticket.TicketId" />
                        <input type="number" name="expense" step="0.01" required />
                        <button type="submit">Update</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
